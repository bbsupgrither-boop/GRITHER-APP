/*! GRITHER THEME SYSTEM - РњР°РєСЃРёРјР°Р»СЊРЅРѕ РїРѕРґСЂРѕР±РЅР°СЏ СЃРёСЃС‚РµРјР° СЃС‚РёР»РµР№ */

/* ===== Р“Р›РћР‘РђР›Р¬РќРђРЇ РђР РҐРРўР•РљРўРЈР Рђ РўР•РњРР—РђР¦РР ===== */

:root {
  /* ===== РћРЎРќРћР’РќР«Р• Р¤РћРќР« (РЎР’Р•РўР›РђРЇ РўР•РњРђ) ===== */
  --background: linear-gradient(135deg, #F5F7FA 0%, #FFFFFF 100%);
  --card: #FFFFFF;
  --surface: #FFFFFF;
  --surface-2: #F3F5F8;
  --surface-3: #ECEFF3;
  
  /* ===== РўР•РљРЎРў (РЎР’Р•РўР›РђРЇ РўР•РњРђ) ===== */
  --text: #0F172A;
  --text-muted: #6B7280;
  --text-inverse: #FFFFFF;
  
  /* ===== Р“Р РђРќРР¦Р« (РЎР’Р•РўР›РђРЇ РўР•РњРђ) ===== */
  --border: #E6E9EF;
  --border-light: #F3F5F8;
  
  /* ===== РђРљР¦Р•РќРўРќР«Р• Р¦Р’Р•РўРђ ===== */
  --primary: #2B82FF;
  --primary-pressed: #2066C8;
  --primary-muted: rgba(43, 130, 255, 0.10);
  
  /* ===== РЎРўРђРўРЈРЎРќР«Р• Р¦Р’Р•РўРђ ===== */
  --success: #22C55E;
  --warning: #FF9F0A;
  --error: #EF4444;
  --info: #2B82FF;
  
  /* ===== РўР•РќР ===== */
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
  --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.10);
  --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.10);
  --shadow-xl: 0 12px 32px rgba(0, 0, 0, 0.15);
  
  /* ===== Р РђР”РРЈРЎР« ===== */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 16px;
  --radius-xl: 20px;
  --radius-2xl: 24px;
  --radius-pill: 9999px;
  
  /* ===== РћРўРЎРўРЈРџР« ===== */
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 12px;
  --spacing-lg: 16px;
  --spacing-xl: 20px;
  --spacing-2xl: 24px;
  --spacing-3xl: 32px;
  --spacing-4xl: 48px;
  
  /* ===== РўРРџРћР“Р РђР¤РРљРђ ===== */
  --font-family: 'Inter', system-ui, sans-serif;
  --font-size-xs: 10px;
  --font-size-sm: 12px;
  --font-size-base: 14px;
  --font-size-lg: 16px;
  --font-size-xl: 18px;
  --font-size-2xl: 20px;
  --font-size-3xl: 24px;
  
  /* ===== LAYOUT ===== */
  --container-max-width: 448px;
  --side-padding: 16px;
  --safe-area-bottom: env(safe-area-inset-bottom);
}

/* ===== РўР•РњРќРђРЇ РўР•РњРђ ===== */
[data-theme="dark"] {
  --background: linear-gradient(135deg, #0B0D10 0%, #12151B 100%);
  --card: #161A22;
  --surface: #161A22;
  --surface-2: #1C2029;
  --surface-3: #202734;
  
  --text: #E8ECF2;
  --text-muted: #A7B0BD;
  --text-inverse: #0F172A;
  
  --border: rgba(255, 255, 255, 0.06);
  --border-light: rgba(255, 255, 255, 0.03);
  
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.4);
  --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.5);
  --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.6);
  --shadow-xl: 0 12px 32px rgba(0, 0, 0, 0.8);
}

/* ===== Р‘РђР—РћР’Р«Р• РЎРўРР›Р ===== */
* {
  box-sizing: border-box;
}

html, body, #root {
  margin: 0;
  padding: 0;
  height: 100%;
  font-family: var(--font-family);
  background: var(--background);
  color: var(--text);
  overflow-x: hidden;
}

/* ===== РљРћРќРўР•Р™РќР•Р  ===== */
.container {
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding-left: var(--side-padding);
  padding-right: var(--side-padding);
}

/* ===== РљРђР РўРћР§РљР ===== */
.card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  padding: var(--spacing-lg);
}

/* ===== РљРќРћРџРљР ===== */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-md) var(--spacing-lg);
  border: none;
  border-radius: var(--radius-md);
  font-family: var(--font-family);
  font-size: var(--font-size-base);
  font-weight: 500;
  cursor: pointer;
  transition: all 200ms ease;
  text-decoration: none;
}

.btn-primary {
  background: var(--primary);
  color: var(--text-inverse);
}

.btn-primary:hover {
  background: var(--primary-pressed);
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.btn-secondary {
  background: var(--surface-2);
  color: var(--text);
  border: 1px solid var(--border);
}

.btn-secondary:hover {
  background: var(--surface-3);
  transform: translateY(-1px);
}

/* ===== РџР РћР“Р Р•РЎРЎ Р‘РђР Р« ===== */
.progress-bar {
  width: 100%;
  height: 8px;
  background: var(--surface-2);
  border-radius: var(--radius-pill);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--primary);
  border-radius: var(--radius-pill);
  transition: width 300ms ease;
}

/* ===== РђРќРРњРђР¦РР ===== */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 300ms ease;
}

.animate-slide-up {
  animation: slideUp 300ms ease;
}

/* ===== РђР”РђРџРўРР’РќРћРЎРўР¬ ===== */
@media (max-width: 480px) {
  .container {
    padding-left: var(--spacing-lg);
    padding-right: var(--spacing-lg);
  }
}

/* ===== РЈРўРР›РРўР« ===== */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }

.w-full { width: 100%; }
.h-full { height: 100%; }

.mb-sm { margin-bottom: var(--spacing-sm); }
.mb-md { margin-bottom: var(--spacing-md); }
.mb-lg { margin-bottom: var(--spacing-lg); }
.mb-xl { margin-bottom: var(--spacing-xl); }

.p-sm { padding: var(--spacing-sm); }
.p-md { padding: var(--spacing-md); }
.p-lg { padding: var(--spacing-lg); }
.p-xl { padding: var(--spacing-xl); }
